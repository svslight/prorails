.row.d-flex.justify-content-center
  .col-10
    h1.mt-2 = question.title
    p= question.body

    .answer-errors
      = render 'shared/errors', resource: answer

    = render partial: 'shared/attachments', locals: { resource: question, del: false }

    - if question.links.present?
      .links.border.p-2
        h5
          b Links and Gists:
        ul
          - question.links.each do |link|
            li class = "link-#{link.id}"
              - if link.gist?
                p.badge.badge-primary.mr-2 Gist Text:
                = link.gist_content
              - else
                = link_to link.name, link.url
              - if current_user&.author?(question)
                p= link_to 'Delete Link', link_path(link), method: :delete, remote: true
    
    hr
    .answers
      = render question.answers.sort_by_best

    = form_with model: [question, answer], class: 'new-answer' do |f|
      .form-group
        = f.label :body, 'Your answer'
        = f.text_area :body, class: 'form-control'
      .form-group
        = f.label :files, class: 'mr-2'
        = f.file_field :files, multiple: true

      p Links:
      #links            
        = f.fields_for :links do |link|
          = render 'links/link_fields', f: link
        .links
          = link_to_add_association 'Add Links', f, :links, partial: 'links/link_fields', class: 'my-3 btn btn-success'

      = f.submit 'Create', class: 'btn btn-success'

    / = render 'answers/new', answer: question.answers.new
